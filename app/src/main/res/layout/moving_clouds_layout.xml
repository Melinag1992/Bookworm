<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
        android:id="@+id/cloud_one"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:direction="left"
        app:duration="7000"
        app:imageSrc="@drawable/cloud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scaleType="centerInside" />

    <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
        android:id="@+id/cloud_two"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="104dp"
        app:direction="left"
        app:duration="9000"
        app:imageSrc="@drawable/cloud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cloud_one"
        app:scaleType="fitEnd" />

    <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
        android:id="@+id/cloud_three"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:direction="left"
        app:duration="11000"
        app:imageSrc="@drawable/cloud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cloud_two"
        app:scaleType="fitStart" />

</android.support.constraint.ConstraintLayout>